<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" style="-fx-padding: 20;" fx:controller="com.example.client.LoginController">

    <center>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Inserire email:"/>
            <TextField fx:id="loginField" prefWidth="200"/>
            <Button fx:id="loginButton" text="Login" onAction="#onLoginButtonClick"/>
            <HBox alignment="CENTER">
                <Label fx:id="errorLabel" style="-fx-text-fill: red;"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
